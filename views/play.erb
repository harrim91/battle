<body style="background-color:#FFDCB7; border: 3px solid black">
  <iframe width="0" height="0" src="https://www.youtube.com/embed/J9d9UrK0Jsw?autoplay=1" frameborder="0" allowfullscreen></iframe>
  <div style="text-align:center">
    <h1><%= @game.active_player.name %> vs. <%= @game.defending_player.name %></h1>
  </div>
  <div style="float:left">
    <h3> <%= @game.active_player.name %>: <%= @game.active_player.hp %> HP</h3>
    <img src="<%= @game.active_player.image %>" width="300" height "225"/>
  </div>
  <div style="float:right">
    <h3> <%= @game.defending_player.name %>: <%= @game.defending_player.hp %> HP</h3>
    <img src="<%= @game.defending_player.image %>" width="180" height "180"/>
  </div>
  <form action="/attack" method="post">
    <div style="width:100%;height:100%;position:absolute;vertical-align:middle;text-align:center;">
      <p><%= @game.active_player.name %>'s Turn</p>
      <input type="submit" value="Attack">
    </form>
    <form action="/stab" method="post">
      <input type="submit" value="Stab">
    </form>
    <form action="/pinch" method="post">
      <input type="submit" value="Pinch">
    </div>
  </form>
</body>
